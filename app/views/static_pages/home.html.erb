<% if signed_in? %>
	<p>ようこそ、<%= current_user.name %> さん</p>
<% end %>

<center><%= image_tag "seishosai15_blue.png", class: 'fw' %></center>

<div id = "top-picture">
<center><%= image_tag "top.jpg", class: 'fw' %></center>
</div>

<ul data-role = "listview" data-inset="true">
	<li data-role = "list-divider">新規投稿一覧</li>
	<% if @posts.any? %>
		<% @posts.each do |post| %>
			<li>
				<% if post.coupon == 1 %>
    				<%= link_to "【クーポンあり】#{post.title}", post%>
    			<% else %>
    				<%= link_to "#{post.title} (#{post.homeroom.shop_name} 3-#{post.homeroom.id})", post %>
       			<% end %>
    		</li>
  		<% end %>
		<li><%= link_to "記事をもっと見る", posts_path %></li>
	<% else %>
		<li>投稿はありません。</li>
	<% end %>
</ul>


<h2>青商祭プログラム</h2>
