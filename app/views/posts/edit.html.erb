<% provide(:title, "記事編集") %>

<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>

    <%= f.label :content, "本文" %>
    <%= f.text_area :content %>

    <%= f.submit "編集を保存", class: "btn btn-large btn-primary" %>
<% end %>