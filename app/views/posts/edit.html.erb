<% provide(:title, "記事編集") %>

<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>

    <%= f.label :content, "本文" %>
    <%= f.text_area :content %>

    <br>

    <%= f.label :coupon, "クーポンを掲載する" %>
    <%= f.check_box :coupon, {}, "1", "0" %>

    <%= f.label :c_content, "クーポンの内容(100字以内)" %>
    <%= f.text_field :c_content %>

    <br>

    <%= f.submit "編集を保存", class: "btn btn-large btn-primary" %>
<% end %>