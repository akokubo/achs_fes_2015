<% provide(:title, "投稿一覧") %>
<h1>投稿一覧</h1>
<ul data-role = "listview" data-inset="true">
	<li data-role = "list-divider">投稿記事一覧</li>

<% if @posts.any? %>    
<% @posts.each do |post| %>
    <li>
    	<h2>
    		<%= post.title %>
    		<% if post.coupon == 1 %>
    			【クーポンあり】
       		<% end %>
    	</h2>
    	<p><strong><%= post.homeroom.shop_name %> (3-<%= post.homeroom.id %>)</strong> - <%= time_ago_in_words(post.created_at) %>前
    	</p>
    	<p><%= link_to "記事を見る", post, class: "ui-btn" %><p>
    </li>
<% end %>
<% else %>
    <li>投稿はありません。</li>
<% end %>

</ul>