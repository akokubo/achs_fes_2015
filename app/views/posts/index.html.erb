<% provide(:title, "投稿一覧") %>
<h1>投稿一覧</h1>
<ul data-role = "listview" data-inset="true">
    <li data-role = "list-divider">新規投稿一覧</li>
    <% if @posts.any? %>
        <% @posts.each do |post| %>
            <li>
                <% if post.coupon == 1 %>
                    <%= link_to post do %>
                        <h3><%= post.title %>【クーポン】</h3>
                        <p><%= post.homeroom.shop_name %> (3-<%= post.homeroom.id %>) - <%= time_ago_in_words(post.created_at) %>前</p>
                    <% end %>
                <% else %>
                    <%= link_to post do %>
                        <h3><%= post.title %></h3>
                        <p><%= post.homeroom.shop_name %> (3-<%= post.homeroom.id %>) - <%= time_ago_in_words(post.created_at) %>前</p>
                    <% end %>
                <% end %>
            </li>
        <% end %>
    <% else %>
        <li>投稿はありません。</li>
    <% end %>
</ul>
