<% provide(:title, "記事投稿") %>

<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>

    <%= f.label :content, "本文" %>
    <%= f.text_area :content %>

    <%= f.submit "記事を投稿する", class: "btn btn-large btn-primary" %>
<% end %>

<%= link_to "マイページへ", @user, class: "ui-btn"  %>