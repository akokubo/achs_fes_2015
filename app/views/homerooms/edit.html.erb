<% provide(:title, "プロフィール変更") %>
<h1>プロフィール変更</h1>
    <%= form_for(@homeroom) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :shop_name, "店名" %>
        <%= f.text_field :shop_name %>

        <%= f.label :content, "本文" %>
        <%= f.text_area :content %>

        <%= f.label :menu, "メニュー" %>
        <%= f.text_area :menu %>

    <%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
    <% end %>

</div>