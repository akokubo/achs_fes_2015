<% provide(:title, @homeroom.shop_name) %>
<center>
	<h1>
		<br>
		<%= @homeroom.shop_name %>
	</h1>
	(3年<%= @homeroom.id %>組)
</center>

<p><%= simple_format @homeroom.content %></p>
<p>
	<strong>メニュー</strong>
	<%= simple_format @homeroom.menu %>
</p>

<hr>

<% if @homeroom.posts.any? %>
    <h2>記事一覧 (<%= @homeroom.posts.count %>)</h2>
    <ul data-role = "listview" data-inset="true">
		<% @posts.each do |post| %>
    		<li>
     			<%= link_to "#{post.title}   -   #{time_ago_in_words(post.created_at)}前", post %>
    		</li>
		<% end %>
	</ul>
<% else %>
	<h3>記事はありません。</h3>
<% end %>